def square(x):
    return x ** 2

def greet(name):
    return f"Hello, {name}!"

def is_even(n):
    return n % 2 == 0

def factorial(n):
    if n == 0:
        return 1
    return n * factorial(n - 1)

def main():
    print("Square of 5:", square(5))
    print(greet("Alice"))
    print("Is 4 even?", is_even(4))
    print("Factorial of 5:", factorial(5))

main()
